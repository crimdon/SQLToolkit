{
    "id": "a614c885-96bc-42ed-9369-ea36103dd898",
    "name": "RunSqlScripts",
    "friendlyName": "Run Sql Scripts",
    "description": "Allows you to run SQL Scripts",
    "author": "Andrew Lackenby",
    "category": "Utility",
    "version": {
        "Major": "2",
        "Minor": "2",
        "Patch": "2"
    },
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "minimumAgentVersion": "1.83.0",
    "inputs": [
       {
            "name": "pathToScripts",
            "type": "filePath",
            "label": "Path to SQL Scripts",
            "required": true
        },
        {
            "name": "serverName",
            "type": "string",
            "label": "Server Name",
            "required": true,
            "helpMarkDown": "Instance name of the SQL Server"
        },
         {
            "name": "databaseName",
            "type": "string",
            "label": "Database Name",
            "required": true
        },
        {
            "name": "removeComments",
            "type": "boolean",
            "label": "Remove comments",
            "defaultValue": true,
            "helpMarkDown": "If comments are not removed the keyword Go cannot appear in them otherwise the task will fail."
        },
        {
            "name": "userName",
            "type": "string",
            "label": "SQL Server Login",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Login using SQL Authentication. Otherwise uses the login the build agent service runs under"
        },
                {
            "name": "userPassword",
            "type": "string",
            "label": "SQL Server Authentication password",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Password for SQL Authenication. You should use a secret variable here."
        },
        {
            "name": "queryTimeout",
            "type": "string",
            "label": "Query Timeout",
            "required": true,
            "defaultValue": "30",
            "groupName": "advanced"
        }
    ],
    "instanceNameFormat": "Run Sql Scripts on $(databaseName)",
    "execution": {
        "PowerShell3": {
            "target": "RunSqlScripts.ps1"}
    }
}